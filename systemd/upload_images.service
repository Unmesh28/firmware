[Unit]
Description=Upload Critical Images
After=network-online.target
Wants=network-online.target

[Service]
Type=simple
User=pi
Group=pi

# OTA-safe paths
Environment=PYTHONPATH=/home/pi/facial-tracker-firmware/current/apps:/home/pi/facial-tracker-firmware/current/libs
WorkingDirectory=/home/pi/facial-tracker-firmware/current/apps

ExecStart=/home/pi/facial-tracker-firmware/venv/bin/python \
          /home/pi/facial-tracker-firmware/current/apps/upload_images.py

Restart=on-failure
RestartSec=5

# Lowest priority â€” bulk I/O must not compete with detection
Nice=15
CPUWeight=10
IOSchedulingClass=idle
IOSchedulingPriority=7
MemoryMax=40M

StandardOutput=journal
StandardError=journal

[Install]
WantedBy=multi-user.target